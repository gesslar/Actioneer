{
  "name": "@gesslar/actioneer",
  "description": "The best action pipeline thingie this side of Tatooine, or your money back.",
  "author": {
    "name": "gesslar",
    "url": "https://gesslar.dev"
  },
  "version": "2.2.0",
  "license": "Unlicense",
  "homepage": "https://github.com/gesslar/toolkit#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gesslar/actioneer.git"
  },
  "keywords": [
    "actioneer",
    "pipeline",
    "workflow",
    "sabrina",
    "salem",
    "package",
    "composition",
    "lasagna"
  ],
  "packageManager": "pnpm@10.28.1",
  "main": "./src/index.js",
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/types/index.d.ts",
      "browser": "./src/browser/index.js",
      "node": "./src/index.js",
      "default": "./src/index.js"
    },
    "./browser": {
      "types": "./src/types/index.d.ts",
      "default": "./src/browser/index.js"
    },
    "./node": {
      "types": "./src/types/index.d.ts",
      "default": "./src/index.js"
    }
  },
  "files": [
    "src/",
    "UNLICENSE.txt"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "types": "node -e \"require('fs').rmSync('types',{recursive:true,force:true});\" && tsc -p tsconfig.types.json",
    "submit": "pnpm publish --access public --//registry.npmjs.org/:_authToken=\"${NPM_ACCESS_TOKEN}\"",
    "update": "pnpm self-update && pnpx npm-check-updates -u && pnpm install",
    "test": "node --test tests/**/*.test.js",
    "test:browser": "node --test tests/browser/*.test.js",
    "test:node": "node --test tests/node/*.test.js",
    "pr": "gt submit -p --ai",
    "patch": "pnpm version patch",
    "minor": "pnpm version minor",
    "major": "pnpm version major"
  },
  "dependencies": {
    "@gesslar/toolkit": "^3.24.0"
  },
  "devDependencies": {
    "@gesslar/uglier": "^1.2.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3"
  }
}
